<!--pages/order/myhelp/myhelp.wxml-->
<view class="{{zhuti}}">
  <tabBar selected="2"></tabBar>
<view class="qqgroup"><text class="qqfont">加入官方QQ群：</text></view>
<view class="order">
    <scroll-view class="out" scroll-y>
      <block wx:for="{{list}}" wx:key="unique">
        <view class="box">
        <view class="box2"  bind:tap="jumptoinfo"  data-index="{{index}}">
          <view class="head"></view>
          <text class="type">{{item.type}}</text>
          <text class="time">{{item.createTime}}</text>
          <text class="orderstate">{{item.status}}</text>
          <text class="from">{{item.from}}</text>
          <view class="jiantou">--------</view>
          <text class="to">{{item.building}}号楼</text>
          <text class="price">￥ {{item.price}}</text>
        </view>
          <view class="divider"></view>
          <text class="beizhu">备注:{{item.remark}}</text>
          <view class="getorder" bind:tap="cancel" data-id="{{item.id}}">取消订单</view>
          <view class="finishorder" data-id="{{item.id}}" bind:tap="complete">确认送达</view>
        </view>
      </block>
      <view class="zhanwei"></view>
   </scroll-view>
  </view>
</view>