.topBar {
  height: 40px;
  border-bottom: 1px solid #656565;
  line-height: 40px;
}

.topBar .font {
  font-size: 18px;
  padding-left: 10px;
}

.topBar .icon-zuojiantou {
  color: #656565;
  font-size: 20px;
  padding-left: 8px;
}

.score {
  width: 200px;
  height: 200px;
  border-radius: 100px;
  border: 1px solid #fff;
  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.4);
  margin: 50px auto;
  margin-top: 100px;
  font-size: 40px;
  text-align: center;
  line-height: 200px;
  color: #656565;
}

.evaluate {
  width: 250px;
  height: 80px;
  border-radius: 20px;
  border: 1px solid #fff;
  box-shadow: 0 4px 20px 0 rgba(0, 0, 0, 0.1);
  background-color: rgba(255, 255, 255, 0.4);
  margin: 0 auto;
  font-size: 20px;
  text-align: center;
  line-height: 80px;
}
