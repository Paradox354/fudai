<view class="{{zhuti}}">
  <tabBar selected="0"></tabBar>
  <scroll-view class='out' scroll-y>
    <view class="map"></view>
    <view class="state">
      <block wx:for="{{statu}}" wx:key="unique">
        <view class="box">
          <view class="jiantou">
          </view>
          <view class="info">
            <view >
              <text class="orderstate" wx:if="{{item.type!=3&&item.type!=7}}">{{item.message}}</text>
              <text class="orderstate" wx:else>{{item.message.msg}}</text>
              <text class="time">{{item.createTime}}</text>
            </view>
            <view><text class="orderstate"></text>
              <view class="confirm" wx:if="{{item.type==3&&check==1}}" bind:tap="check">确认</view>
              <view class="confirm" wx:if="{{item.type==7&&comfirm==1}}" bind:tap="comfirm">确认</view>
            </view>
          </view>
        </view>
        <view class="box" >
          <view class="shoot"></view>
        <view class="huowu" wx:if="{{item.type==3||item.type==7}}">
            <image src='{{item.message.picture}}'/>
        </view>
        </view>
      </block>

    </view>
    <view class="zhanwei"></view>
  </scroll-view>
</view>