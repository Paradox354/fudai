/* pages/chatroom/chatroom.wxss */
.container {
  position: absolute;
  height: 100%;
  width: 100%;
  background-image: url('https://bucketofpicture.oss-cn-hangzhou.aliyuncs.com/cbb820543001497db8691152b063b5c5.png');
  background-size: 100% 100%;
  background-position: center;
}
.pingtai {
  position: absolute;
  top: 0%;
  left: 30%;
  width: 375px;
height: 40px;
flex-shrink: 0;
color: rgba(101, 101, 101, 0.80);
font-family: STHupo;
font-size: 28px;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.diver {
  position: absolute;
  top: 7%;
  left: 0%;
  width: 100%;
  height: 1px;
  background-color: #000;
}
.box {
  position: absolute;
  top: 9%;
  height: 75%;
  width: 100%;
}
.swipe {
  position: absolute;
  top: 0%;
  height: 100%;
  width: 100%;
}
.message {
  position: relative;
  height: 15%;
  width: 90%;
  border-radius: 20px;
border: 1px solid #FFF;
background: rgba(255, 255, 255, 0.40);
box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.10);
  left: 5%;
  margin-top: 1%;
}
.head {
  position: absolute;
  width: 20%;
  height: 80%;
  top: 7%;
  left: 3%;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #ccc;
}
.headimg {
  max-width: 100%;
  max-height: 100%;
  border-radius: 50%;
}
.chatobject {
  position: absolute;
  top: 20%;
  left: 28%;
height: 23px;
flex-shrink: 0;
color: #000;
font-family: STFangsong;
font-size: 18px;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.chatmsg {
  position: absolute;
  top: 50%;
  left: 28%;
height: 18px;
flex-shrink: 0;
color: #000;
font-family: STFangsong;
font-size: 14px;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.new {
  position: absolute;
  right: 5%;
  top: 30%;
  color: red;
}