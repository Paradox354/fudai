/* pages/chat/chat.wxss */
.container {
  position: absolute;
  height: 100%;
  width: 100%;
}
.name {
  position: absolute;
  top: 0%;
  width: 100%;
  height: 8%;
  background: #D9D9D9;
}
.id {
  position: absolute;
  top: 20%;
  left: 37%;
  width: 81px;
height: 22px;
flex-shrink: 0;
color: #000;
font-family: Inter;
font-size: 20px;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.phone {
  position: absolute;
  right: 5%;
  top: 5%;
  width: 10%;
  height: 75%;
}
.phone image {
  position: absolute;
  max-width: 100%;
  max-height: 100%;
  flex-shrink: 0;
}
.chatmsg {
  position: absolute;
  height: 80%;
  width: 100%;
  top: 8%;
}
.inbox {
  position: absolute;
  bottom: 0%;
  width: 100%;
  height: 12%;
  background: #D9D9D9;
}
.inbox input {
  position: absolute;
  top: 7%;
  width: 65%;
  height: 50%;
  background: #FFF;
  left: 15%;
}
.upimg {
  position: absolute;
  top: 7%;
  width: 10%;
  height: 50%;
  background: #FFF;
  left: 2%;
}
.upimg image {
  max-width: 100%;
  max-height: 100%;
}
.send {
  position: absolute;
  top: 7%;
  width: 15%;
  height: 50%;
  background: rgb(13, 97, 224);
  right: 2%;
  display: flex;
    justify-content: center;
    align-items: center;
  
}
.msg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.message-item {
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  background-color: #f1f1f1;
  /* 其他样式设置，例如圆角、边框等 */
}

.message-content {
  position: relative;
  left: 2%;
  white-space: pre-wrap; /* 允许文本换行 */
  word-break: break-all;
  font-size: 20px;
}
.message-contentmy {
  position: relative;
  top: 20%;
  right: 1%;
  white-space: pre-wrap; /* 允许文本换行 */
  word-break: break-all;
  font-size: 20px;
}
.head1 {
  position: relative;
  top: 1%;
  width: 60px;
  height: 60px;
}
.head1 image {
  position: relative;
  max-width: 100%;
  max-height: 100%;
  flex-shrink: 0;
}
.head2 {
  position: relative;
  top: 1%;
  width: 60px;
  height: 60px;
}
.head2 image {
  position: relative;
  max-width: 100%;
  max-height: 100%;
  flex-shrink: 0;
}