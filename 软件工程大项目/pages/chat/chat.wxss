  position: relative;
  background-color: rgba(119, 0, 255, 0.3);
  border: blue;
  border-width: 2rpx;
  border-radius: 5%;
  padding: 2%;
}
.ordercontentmy{
  position: relative;
  background-color: rgba(119, 0, 255, 0.3);
