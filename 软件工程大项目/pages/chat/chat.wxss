}
.ordercontent image {
  position: relative;
  max-width: 180rpx;
  max-height: 180rpx;
  border-radius: 5%;
  top: 2rpx;
  left: 25rpx;
}
.address{
  position: relative;
  font-size: 20px;
  margin: 2rpx;
}
.code{
  position: relative;
  font-size: 20px;
  margin: 2rpx;
}
.arrname {
  position: relative;
  font-size: 20px;
  margin: 2rpx;
}
.kehuphone {
  position: relative;
  font-size: 20px;
}
.name {
  position: absolute;
  top: 0%;
  width: 100%;
  height: 8%;
  border-radius: 20px;
border: 1px solid #FFF;
background: rgba(255, 255, 255, 0.40);
}
.id {
  position: absolute;
  top: 20%;
  left: 8%;
height: 22px;
flex-shrink: 0;
color: #000;
font-family: STFangsong;
font-size: 25px;
font-style: normal;
font-weight: 400;
line-height: normal;
}
.phone {
  position: absolute;
  right: 5%;
  top: 5%;
  width: 10%;
  height: 75%;
}
.phone image {
  position: absolute;
  max-width: 100%;
  max-height: 100%;
  flex-shrink: 0;
}
.chatmsg {
  position: absolute;
  height: 80%;
  width: 100%;
  top: 8%;
}
.inbox {
  position: absolute;
  bottom: 0%;
  width: 100%;
  height: 10%;
  border-radius: 10px;
border: 1px solid #FFF;
background: rgba(255, 255, 255, 0.40);
box-shadow: 0px 4px 20px 0px rgba(0, 0, 0, 0.10);
}
.inbox input {
  position: absolute;
  top: 7%;
  width: 65%;
  height: 50%;
  background: #FFF;
  left: 15%;
}
.upimg {
  position: absolute;
  top: 7%;
  width: 10%;
  height: 50%;
  background: rgb(255,255,255,0);
  left: 2%;
}
.upimg image {
  max-width: 100%;
  max-height: 100%;
}
.send {
  position: absolute;
  top: 7%;
  width: 15%;
  height: 50%;
  background: rgb(13, 97, 224,0.4);
  border-radius: 20%;
  right: 2%;
  display: flex;
    justify-content: center;
    align-items: center;
  
}
.msg {
  position: absolute;
  width: 100%;
  height: 100%;
}
.message-item {
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  background-color: rgb(255, 255, 255,0.4);
  /* 其他样式设置，例如圆角、边框等 */
}
.message-itemmy {
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  background-color: rgb(255, 255, 255,0.4);
  align-items: center;
  /* 其他样式设置，例如圆角、边框等 */
  justify-content: flex-end;
}

.message-content {
  position: relative;
  left: 1%;
  width: 70%;
  word-break: break-all;
  font-size: 20px;
  display: flex;
  align-items: center;
}
.myimg {
  position: relative;
  right: 20%;
  height: 100px;
  width: 100px;
}
.myimg image {
  max-width: 100%;
  max-height: 100%;
}
.message-contentmy {
  position: relative;
  display: flex;
  top: -25rpx;
  justify-content: flex-end;
  align-items: center;
  width: 70%;
  text-align: left;
  right: 20%;
  word-break: break-all;
  font-size: 20px;
}
.head1 {
  position: relative;
  top: 1%;
  width: 60px;
  height: 60px;
}
.head1 image {
  position: relative;
  max-width: 100%;
  max-height: 100%;
  flex-shrink: 0;
}
.head2 {
  position: absolute;
  right: 2%;
  width: 60px;
  height: 60px;
}
.head2 image {
  position: absolute;
  max-width: 100%;
  max-height: 100%;
  flex-shrink: 0;
}